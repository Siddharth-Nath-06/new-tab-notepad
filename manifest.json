{
    "manifest_version": 3,
    "name": "Brave Notepad",
    "version": "1.1.0",
    "description": "Adds a persistent notepad to your Brave new tab page",
    "author": "Sin Studios",
    "permissions": [
        "contextMenus"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "chrome://newtab/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "chrome://newtab/*",
                "chrome://*/*"
            ],
            "js": ["notepad.js"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "prototype.html",
                "minimized.html"
            ],
            "matches": [
                "chrome://newtab/*",
                "chrome://*/*"
            ]
        }
    ],
    "icons": {
        "16": "icons-by-vectorspoint-flaticon/notepad-16.png",
        "64": "icons-by-vectorspoint-flaticon/notepad-64.png",
        "128": "icons-by-vectorspoint-flaticon/notepad-128.png"
    }
}